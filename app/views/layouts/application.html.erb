<!DOCTYPE html>
<html>
<head>
	<title>Gallery</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
	<div class="row">
		<nav class="navbar navbar-fixed-top navbar-inverse">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<%= link_to 'Photo Gallery', root_path, class: 'navbar-brand' %>
				</div>

				<div class="collapse navbar-collapse" id="navbar-collapse">
					<ul class="nav navbar-nav">
					</ul>
					<ul class="navbar-nav navbar-right">
						<% if user_signed_in? %>
						<p class="navbar-text">
							Hello, <%= current_user.name %>
						</p>
						<ul class="nav navbar-nav">
							<li><%= link_to 'My profile', user_path(current_user) %></li>
							<li><%= link_to 'Exit', destroy_user_session_path, method: :delete %></li>
						</ul>
						<% else %>
						<%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-default navbar-btn' %>
						<%= link_to 'Log in', new_user_session_path, class: 'btn btn-default navbar-btn' %>
						<% end %>
					</ul>
				</div>
			</div>
		</nav>
	</div>
	<div class="container contain">
		<%= yield %>		
	</div>
</body>
</html>
