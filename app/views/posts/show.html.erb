<p id="notice"><%= notice %></p>

<div class="row">
    <div class="thumbnail">
      <%= image_tag @post.image.url if @post.image? %>
      <div class="caption">
        <h5><%= @post.title %></h5>
        <p><%= @post.user.name %></p>
      </div>
    </div>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
